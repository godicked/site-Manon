<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Administration</title>
        <link rel="stylesheet" href="admin.css" />
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    </head>
    <body ng-app="myApp">   
        <nav>
            <ul>
                <li>Slider</li>
                <li>Recettes</li>
                <li>Images</li>
            </ul>
        </nav>

        <section>
            <article class="article-hidden">
                <h2>Le Slider</h2>
                <div class="image-slider">
                    <div class="image-slider-container">
                        <img src="patisserie1.jpg" alt="patisserie">
                    </div>
                    <div class="image-slider-shadow"></div>
                    <div class="image-slider-num">1</div>
                    <form>
                        <input type="text" class="image-slider-text">
                    </form>
                </div>
                <div class="image-slider">
                    <div class="image-slider-container">
                        <img src="patisserie2.jpg" alt="patisserie">
                    </div>
                    <div class="image-slider-shadow"></div>
                    <div class="image-slider-num">2</div>
                    <form>
                        <input type="text" class="image-slider-text">
                    </form>
                </div>

                <div class="image-slider">
                    <div class="image-slider-container">
                        <img src="patisserie3.jpg" alt="patisserie">
                    </div>
                    <div class="image-slider-shadow"></div>
                    <div class="image-slider-num">3</div>
                    <form>
                        <input type="text" class="image-slider-text">
                    </form>
                </div>

            </article>
            <article class="article-hidden">
                <h2>Les recettes</h2>
                <div class="filter-container">
                    <form>
                    <label>Ajouter un filtre</label>
                    <input type="text">
                    </form>
                    <div class="filter">patates</div>
                </div>
                <hr>

                <div class="recette-container">
                    <div class="recette">
                        <img src="http://foodnetwork.sndimg.com/content/dam/images/food/fullset/2013/10/8/0/fnk_scalloped-potatoes_s4x3.jpg.rend.sni12col.landscape.jpeg" alt="gratin">
                        <div class="recette-info">
                            <h3>Gratin pomme de terre</h3>
                        </div>
                    </div>

                    <div class="recette">
                        <img src="http://www.renders-graphiques.fr/image/upload/normal/5678_render_render_gateau.png" alt="gateau">
                        <div class="recette-info">
                            <h3>Gateau choco</h3>
                        </div>
                    </div>
                </div>

            </article>

            <article ng-controller="addRController">
                
                <div class="form-container">
                    <div class="recette-form">
                        <form class="recette-fields">
                            <div class="recette-field">
                                <label>Titre</label>
                                <div class="input_wrap"><input type="text" /></div>
                            </div>
                            <div class="recette-field">
                                <label>Dur√©e</label>
                                <div class="input_wrap"><input type="number" /></div>
                            </div>
                            <div class="recette-field">
                                <label>Prix</label>
                                <div class="input_wrap"><input type="number" /></div>
                            </div>
                            <div class="recette-field">
                                <label>Cover</label>
                                <div class="input_wrap"><input type="text" /></div>
                            </div>
                            <div class="recette-field">
                                <label>Logo</label>
                                <div class="input_wrap"><input type="text" /></div>
                            </div>
                            <div class="recette-field">
                                <label>Materiel</label>
                                <div class="input_wrap"><input type="text" /></div>
                                <button>Ajouter</button>
                            </div>
                            <div class="recette-field">
                                <label>Ingredients</label>
                                <div class="input_wrap"><input type="text" /></div>
                                <button>Ajouter</button>
                            </div>
                            <div class="recette-field">
                                <label>Etapes</label>
                                <div class="input_wrap"><input type="text" /></div>
                                <button>Ajouter</button>
                            </div>
                            <div >
                                <button type="submit" class="recette-submit">Enregistrer</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="recette-preview">
                    
                </div>
                <main-menu></main-menu>
            </article>
        </section>
        
        <!-- Angular App -->
        <script src="js/app.js"></script>
        
        <!-- Angular Controller -->
        <script src="js/controller/addRController.js"></script>
        
        <!-- Angular Directive -->
        <script src="js/directives/onEnter.js"></script>
        <script src="js/directives/mainMenu.js"></script>
        
    </body>
</html>