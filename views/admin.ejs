<!DOCTYPE html>
<html ng-app="myApp">
    <head>
        <meta charset="utf-8" />
        <title>Titre</title>
        <link rel="stylesheet" href="recette.css" />
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    </head>

    <body ng-controller="RecetteCreatorController">
        
        <section id="top-wrapper-input-social-title" >            
            <div id="right-wrapper-title" ng-show="Btitle">
                <img ng-src="{{titleImg}}" alt="titre" />
                <button class="change-button" ng-click="Btitle = !Btitle">changer</button>
            </div>
            
            <div id="option-title" ng-show="!Btitle">
            <label>Lien de l'image</label><br />
            <input type="text" ng-model="titleImg"/>
            <button class="change-button" ng-click="Btitle = !Btitle">changer</button>
            </div>
            
        </section>
        
        
        <section id="wrapper-image-presentation" ng-show="Bpresentation"  class="heart" >
            
            <div id="wrapper-image">
                <img ng-src="{{imgLink}}" />
            </div>
            
            <div id="wrapper-presentation">
                <p>Pour <span ng-bind="nbPersonne"></span> personnes<br />
                Temps de repos : <span ng-bind="tmpRepos"></span> minutes<br />
                Temps de cuisson : <span ng-bind="tmpCuisson"></span> minutes<br />
                Temps de préparation totale : <span ng-bind="tmpTotal"></span> minutes<br />
                Difficulté : <span ng-bind="heartGen();"></span><br />
                Materiel utilisé : <span ng-bind="materiel"></span></p>
            </div>
            <button class="change-button" ng-click="Bpresentation = !Bpresentation">changer</button>
        </section>
        
        <section id="option-presentation" ng-show="!Bpresentation">
            <ul>
                <li><label>Lien de l'image :</label><input type="text" ng-model="imgLink"/></li>
                <li>Pour <input type="text" ng-model="nbPersonne" /> Personne(s)</li>
                <li>Temps de repos en minutes: <input type="number" ng-model="tmpRepos" /></li>
                <li>Temps de cuisson en minutes: <input type="number" ng-model="tmpCuisson"/></li>
                <li>Temps de prepartion totale en minutes: <input type="number" ng-model="tmpTotal"/></li>
                <li>Difficulté (1 à 5): <input type="number" ng-model="lvl"/></li>
                <li>Materiel utilisé: <input type="text" ng-model="materiel"/></li>
            </ul>
            <button class="change-button" ng-click="Bpresentation = !Bpresentation">changer</button>
        </section>
        
        <section id="wrapper-ingredients-etapes-images">
        
            
            <div id="wrapper-left-ingredients">
                
                <img src="scotch.png" alt="scotch" />
                
                <div id="ingredient-background">
                    <h2>Ingrédients:</h2>

                    <ul id="ingredients-list">
                        <li ng-repeat="ingredient in ingredients track by $index"> {{ ingredient }}<img src="croix.png" class="croix-rouge" ng-click="remove($index);"/><hr></li>
                        <li><form><input type="text" ng-model="inputIngredient"/><button ng-click="add(inputIngredient);">ajouter</button></form></li>
                    </ul>
                </div>
                
            
            </div>
            
            <div id="wrapper-right-etapes-vignette">
            
                <div id="wrapper-etapes" ng-show="Betapes">
                    <pre><p ng-bind="etapes"></p></pre>
                <button class="change-button" ng-click="Betapes = !Betapes">changer</button>
                </div>
                
                <div id="#wrapper-set-etapes" ng-show="!Betapes">
                <textarea ng-model="etapes" id="etapes-input"></textarea>
                    <button ng-click="Betapes = !Betapes">sauver</button>
                </div>
                
                <div id="wrapper-vignette" ng-show="Bvignette">
                    <div class="vignette" ng-repeat="v in vignettes">
                        <img ng-src="{{v}}" alt="vignette"/>
                        <img src="croix.png" class="croix-rouge-vignette" ng-click="removeVignette($index);"/>
                    </div>
                    <div class="vignette" ng-click="Bvignette = !Bvignette">
                        <img src="add-vignette.png" alt="vignette"/>
                    </div>
                </div>
                <div id="option-vignette" ng-show="!Bvignette">
                    <label>Lien de l'image</label><br />
                    <input type="text" ng-model="inputVignette"/>
                    <button ng-click="addVignette();">ajouter</button><button ng-click="Bvignette = !Bvignette">annuler</button>
                </div>
                
            </div>
            
        </section>
        
        <br />
        <br />
        <hr />
        
        <!-- Angular App -->
        <script src="js/app.js"></script>
        
        <!-- Angular Controller -->
        <script src="js/controller/RecetteCreatorController.js"></script>
        
        <!-- Angular Directive -->
        <script src="js/directives/onEnter.js"></script>
        <script src="js/directives/mainMenu.js"></script>
        <script src="js/directives/slider.js"></script>
        
        <!-- Angular Services -->
        <script src="js/services/sliderData.js"></script>    
        
        
    </body>
</html>